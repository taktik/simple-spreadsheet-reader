{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		// Use esnext to enable lazy loading
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"lib": ["es2017", "es6", "es5", "dom"],
		"declaration": true,
		/* Generates corresponding '.d.ts' file. */
		"outDir": "./dist",
		// "strict": true,
		"baseUrl": "./",
		"sourceMap": true,
		"paths": {
			"@vendor/*": ["app/scripts/vendor/*"],
			"@taktik/*": ["node_modules/@taktik/*"],
			"typescript-http-client": ["node_modules/typescript-http-client"]
		}
	},
	"include": ["./src"]
}
